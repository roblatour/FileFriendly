<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileFriendly"
        Name="MainWindow"
        Height="600"
        Width="800"
        MinWidth="385"
        MinHeight="550"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        OverridesDefaultStyle="False"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Icon="/filefriendly;component/Resources/fflogogif.gif">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/FormatterResources.xaml"/>
                <ResourceDictionary Source="Resources/BrushResources.xaml"/>
                <ResourceDictionary Source="Resources/ControlResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="WindowsBackgroundBrush"/>
    </Window.Background>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Width="Auto"
          Height="Auto"
          ClipToBounds="False">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146"/>
            <ColumnDefinition Width="632*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Name="Row1"
                           Height="22"/>
            <RowDefinition Name="Row2"
                           Height="48"/>
            <RowDefinition Height="325*"/>
            <RowDefinition Name="Row3"
                           Height="167"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Name="Menu1"
              Background="Transparent"
              BorderBrush="{StaticResource DefaultBorderBrush}">

            <MenuItem Header="_Actions"
                      Name="MenuActions"
                      Tag="MenuActions"
                      Foreground="{StaticResource DefaultSystemBrush}"
                      Background="{StaticResource DefaultMenueBackgroundBrush}"
                      Cursor="Hand">
                <MenuItem Header="_Open"
                          Name="MenuOpen"
                          Tag="Open"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <MenuItem Header="_Hide"
                          Name="MenuHide"
                          Tag="Hide"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <MenuItem Header="_Delete"
                          Name="MenuDelete"
                          Tag="Delete"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <Separator/>
                <MenuItem Header="_Undo"
                          Name="MenuUndo"
                          Tag="Undo"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <Separator/>
                <MenuItem Header="_Refresh"
                          Name="MenuRefresh"
                          Tag="Refresh"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <MenuItem Header="O_ptions"
                          Name="MenuOptions"
                          Tag="Options"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <Separator/>
                <MenuItem Header="E_xit"
                          Name="MenuExit"
                          Tag="Exit"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
            </MenuItem>

            <MenuItem Header="_View"
                      Name="MenuView"
                      Tag="MenuView"
                      Foreground="{StaticResource DefaultSystemBrush}"
                      Background="{StaticResource DefaultMenueBackgroundBrush}"
                      Cursor="Hand">
                <MenuItem Header="_Inbox"
                          Name="MenuViewInbox"
                          Tag="ViewInbox"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="True"
                          IsChecked="True"
                          Cursor="Hand"/>
                <MenuItem Header="_Sent"
                          Name="MenuViewSent"
                          Tag="ViewSent"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="True"
                          IsChecked="True"
                          Cursor="Hand"/>
                <MenuItem Header="_Filed e-mails"
                          Name="MenuViewAll"
                          Tag="ViewAll"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="True"
                          IsChecked="True"
                          Cursor="Hand"/>
                <Separator/>
                <MenuItem Header="_Read"
                          Name="MenuViewRead"
                          Tag="ViewRead"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="True"
                          IsChecked="True"
                          Cursor="Hand"/>
                <MenuItem Header="_Unread"
                          Name="MenuViewUnRead"
                          Tag="ViewUnRead"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="True"
                          IsChecked="True"
                          Cursor="Hand"/>
            </MenuItem>

            <MenuItem Header="_Help"
                      Name="MenuHelp"
                      Tag="MenuHelp"
                      Foreground="{StaticResource DefaultSystemBrush}"
                      Background="{StaticResource DefaultMenueBackgroundBrush}"
                      Cursor="Hand">
                <MenuItem Header="_Help"
                          Name="MenuHelpSub"
                          Tag="Help"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
                <Separator/>
                <MenuItem Header="_About"
                          Name="MenuAbout"
                          Tag="About"
                          Foreground="{StaticResource DefaultSystemBrush}"
                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                          IsCheckable="False"
                          Cursor="Hand"/>
            </MenuItem>

        </Menu>

        <!-- Emails -->
        <TabControl Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Margin="5,6,6,5"
                    Name="TabControl1"
                    HorizontalContentAlignment="Stretch"
                    Grid.RowSpan="2">

            <TabItem Header="E-Mails"
                     Name="TabItem2"
                     Foreground="{StaticResource DefaultSystemBrush}"
                     HorizontalContentAlignment="Stretch"
                     Background="Transparent"
                     VerticalAlignment="Top">

                <Grid ClipToBounds="False"
                      Grid.ColumnSpan="2"
                      Margin="0,5,0,0"
                      Grid.Row="1">
                    <ListView Margin="-3,-2,0,6"
                              Name="ListView1"
                              FontSize="12"
                              HorizontalContentAlignment="Stretch"
                              BorderBrush="Transparent"
                              BorderThickness="0"
                              IsEnabled="True"
                              IsHitTestVisible="True"
                              IsTabStop="True"
                              ClipToBounds="False"
                              AllowDrop="False"
                              Cursor="Hand"
                              IsTextSearchEnabled="False"
                              GridViewColumnHeader.Click="ListViewColumnHeaderClickedHandler"
                              ContextMenuOpening="ListView1_ContextMenuOpening">

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="_File "
                                          Name="MenuContextFile1"
                                          Visibility="Collapsed"
                                          Tag="File"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="F_ile "
                                          Name="MenuContextFile2"
                                          Visibility="Collapsed"
                                          Tag="File"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="Fi_le "
                                          Name="MenuContextFile3"
                                          Visibility="Collapsed"
                                          Tag="File"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="Fil_e "
                                          Name="MenuContextFile4"
                                          Visibility="Collapsed"
                                          Tag="File"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <Separator Name="ContextMenuSeperator"
                                           Visibility="Collapsed"/>
                                <MenuItem Header="_Open"
                                          Name="MenuContextOpen"
                                          Tag="Open"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="Mark as Read"
                                          Name="MenuContextToggleRead"
                                          Tag="ToggleRead"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="_Hide"
                                          Name="MenuContextHide"
                                          Tag="Hide"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                                <MenuItem Header="_Delete"
                                          Name="MenuContextDelete"
                                          Tag="Delete"
                                          Foreground="{StaticResource DefaultSystemBrush}"
                                          Background="{StaticResource DefaultMenueBackgroundBrush}"
                                          IsCheckable="False"
                                          Cursor="Hand"/>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Padding"
                                        Value="0"/>
                                <Setter Property="Height"
                                        Value="Auto"/>
                                <Setter Property="Background"
                                        Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="true">
                                        <Setter Property="Background"
                                                Value="{StaticResource MouseOverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected"
                                             Value="true">
                                        <Setter Property="Background"
                                                Value="{StaticResource SelectedBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>

                                <!-- chain indicator left -->
                                <GridViewColumn Header=" "
                                                Width="12">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Name="ChainInd"
                                                    Padding="0"
                                                    Margin="0"
                                                    Background="Transparent">
                                                <Path Name="Picture"
                                                      Data="M 0 0 L 0 10 M 0 0 L 10 10"
                                                      Stroke="Black"
                                                      StrokeThickness="1"/>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="0">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="Transparent"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="1">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 10 5 L 5 5 M 5 5 L 5 10"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="2">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 5 0 L 5 10"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="3">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 5 0 L 5 5 M 5 5 L 10 5"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Mailbox"
                                                Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Path=MailBoxName}"
                                                   FontWeight="{Binding UnRead}"
                                                   Foreground="{StaticResource DefaultDataBrush}"
                                                   Padding="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Subject"
                                                Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Name="Subject"
                                                   Content="{Binding Path=Subject}"
                                                   FontWeight="{Binding UnRead}"
                                                   Foreground="{StaticResource DefaultDataBrush}"
                                                   Padding="0"
                                                   BorderThickness="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="From"
                                                Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Path=From}"
                                                   FontWeight="{Binding UnRead}"
                                                   Foreground="{StaticResource DefaultDataBrush}"
                                                   Padding="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="To"
                                                Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Path=xTo}"
                                                   FontWeight="{Binding UnRead}"
                                                   Foreground="{StaticResource DefaultDataBrush}"
                                                   Padding="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Date"
                                                Width="92">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                Content="{Binding Path=DateTime,
                                  Converter={StaticResource MyFormatter},
                                  ConverterParameter=Date}"
                                                Foreground="{StaticResource DefaultDataBrush}"
                                                FontWeight="{Binding UnRead}"
                                                Padding="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Time"
                                                Width="92">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                Content="{Binding Path=DateTime,
                                  Converter={StaticResource MyFormatter},
                                  ConverterParameter=Time}"
                                                Foreground="{StaticResource DefaultDataBrush}"
                                                FontWeight="{Binding UnRead}"
                                                HorizontalContentAlignment="Right"
                                                Padding="0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- chain indicator right -->
                                <GridViewColumn Header=" "
                                                Width="12">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Name="ChainInd2"
                                                    Padding="0"
                                                    Margin="0"
                                                    Background="Transparent">
                                                <Path Name="Picture"
                                                      Data="M 0 0 L 0 10 M 0 0 L 10 10"
                                                      Stroke="Black"
                                                      StrokeThickness="1"/>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="0">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="Transparent"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="1">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 5 10 L 5 5 M 5 5 L 0 5"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="2">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 5 0 L 5 10"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=ChainIndicator}"
                                                             Value="3">
                                                    <Setter TargetName="Picture"
                                                            Property="Stroke"
                                                            Value="{StaticResource DefaultSystemBrush}"/>
                                                    <Setter TargetName="Picture"
                                                            Property="Data"
                                                            Value="M 5 0 L 5 5 M 5 5 L 0 5"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

            </TabItem>

        </TabControl>

        <!-- Details -->
        <TabControl Grid.ColumnSpan="2"
                    Grid.Row="3"
                    Margin="6,4,6,22"
                    Name="TabControl2"
                    HorizontalContentAlignment="Stretch"
                    VerticalAlignment="Bottom">
            <TabItem Header="Details"
                     Name="TabItem1"
                     Foreground="{StaticResource DefaultSystemBrush}"
                     Background="Transparent"
                     OverridesDefaultStyle="false"
                     Height="Auto"
                     Margin="0">
                <Grid>
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="468*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Label Name="Label2"
                               Margin="5,0,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            Subject:
                        </Label>
                        <Label Name="Label4"
                               Margin="5,17,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            From:
                        </Label>
                        <Label Name="Label3"
                               Margin="5,34,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            To:
                        </Label>
                        <Label Name="Label5"
                               Margin="5,51,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            Date and Time:
                        </Label>
                        <Label Name="Label6"
                               Margin="5,68,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            Original Folder:
                        </Label>
                        <Label Name="Label7"
                               Margin="5,87,0,0"
                               Height="30"
                               HorizontalContentAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource DefaultSystemBrush}">
                            Recommended Folder:
                        </Label>

                        <TextBox Name="tbDetailSubject"
                                 Margin="2,5,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultDataBrush}"
                                 Grid.Column="1"/>
                        <TextBox Name="tbDetailFrom"
                                 Margin="2,22,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultDataBrush}"
                                 Grid.Column="1"/>
                        <TextBox Name="tbDetailTo"
                                 Margin="2,39,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultDataBrush}"
                                 Grid.Column="1"/>
                        <TextBox Name="tbDetailDateTime"
                                 Margin="2,56,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultDataBrush}"
                                 Grid.Column="1"/>
                        <TextBox Name="tbDetailOrginal"
                                 Margin="2,73,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultDataBrush}"
                                 Grid.Column="1"/>
                        <TextBox Name="tbDetailTarget1"
                                 Margin="2,90,0,0"
                                 Height="17"
                                 HorizontalContentAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Foreground="{StaticResource DefaultSystemBrush}"
                                 Grid.Column="1"
                                 Visibility="Hidden"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Line -->
        <Label Name="lblMainMessageLine"
               FontSize="12"
               Foreground="{StaticResource DefaultSystemBrush}"
               Margin="5,0,23,-2"
               Grid.ColumnSpan="2"
               Height="26"
               Grid.Row="3"
               VerticalAlignment="Bottom"
               Opacity="0.8"/>
        <ProgressBar Name="ProgressBar1"
                     Foreground="{StaticResource SelectedForegroundBrush}"
                     Background="Transparent"
                     Margin="67,0,10,4.998"
                     Visibility="Hidden"
                     Opacity="0.8"
                     Height="10"
                     Grid.Row="3"
                     VerticalAlignment="Bottom"
                     Grid.Column="1"/>
        <Rectangle Height="1"
                   Margin="70,0,6,21"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   Name="Rectangle1"
                   Stroke="{StaticResource DefaultSystemBrush}"
                   VerticalAlignment="Bottom"
                   Fill="{StaticResource DefaultSystemBrush}"/>
        <Rectangle Height="1"
                   Margin="67,24,6,0"
                   Grid.ColumnSpan="2"
                   Grid.Row="3"
                   Name="Rectangle2"
                   Stroke="{StaticResource DefaultSystemBrush}"
                   VerticalAlignment="Top"
                   Fill="{StaticResource DefaultSystemBrush}"/>
        <Image Cursor="Hand"
               HorizontalAlignment="Right"
               Margin="0,3,6,5"
               Name="imgClose"
               Source="/filefriendly;component/Resources/close.gif"
               Stretch="Fill"
               Width="14"
               Grid.Column="1"
               Height="14"
               ToolTip="Close"/>
        <Image Cursor="Hand"
               HorizontalAlignment="Right"
               Margin="0,3,36,5"
               Name="imgMinimize"
               Source="/filefriendly;component/Resources/Minimize.gif"
               Stretch="Fill"
               Width="14"
               Grid.Column="1"
               ToolTip="Minimize"
               Opacity="0.52"/>
        <Image Cursor="Hand"
               Margin="0,3,23,5"
               Name="imgMaximize"
               Source="/filefriendly;component/Resources/maximize.gif"
               Stretch="Fill"
               Grid.Column="1"
               ToolTip="Maximize"
               Opacity="0.52"
               HorizontalAlignment="Right"
               Width="14"/>
        <Label FontFamily="Vladimir Script"
               FontSize="24"
               Foreground="Brown"
               Grid.RowSpan="2"
               HorizontalContentAlignment="Center"
               Margin="0,12,0,17"
               Name="lbVersion"
               Grid.Column="1"
               HorizontalAlignment="Right"
               Width="133"
               Opacity="0.7">
            FileFriendly
        </Label>
    </Grid>

</Window>