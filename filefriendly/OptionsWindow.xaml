<Window x:Class="OptionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:self="clr-namespace:filefriendly.My"        
    Title="FileFriendly - Options" Height="280" Width="784" WindowStyle="None" ShowInTaskbar="False" Visibility="Visible" Name="Window1" WindowStartupLocation="CenterOwner" Topmost="True" SnapsToDevicePixels="True" ResizeMode="CanResize" MaxHeight="280" MinHeight="280" MaxWidth="784" MinWidth="784" Icon="/filefriendly;component/Resources/fflogogif.gif">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load this specific theme because the Aero theme for CheckBox has issues. -->
                <ResourceDictionary Source="/PresentationFramework.Royale;V3.0.0.0;31bf3856ad364e35;component/themes/royale.normalcolor.xaml" />
                <ResourceDictionary Source="Resources/BrushResources.xaml" />
                <ResourceDictionary Source="Resources/ControlResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="WindowsBackgroundBrush" />
    </Window.Background>
    
    <Grid Height="310.676" Width="773" ShowGridLines="False">
        <TabControl Margin="8,3,12,82.283" Name="TabControl1">
                       
            <TabItem Header="Options" Name="TabItem1" Foreground="Brown">
                <Grid Height="250" Width="737">
                    <GroupBox Header="Sounds" Margin="0,12,7,0" Name="GroupBox2" Foreground="Brown" BorderBrush="Brown" HorizontalAlignment="Right" Width="140" Height="107" VerticalAlignment="Top">
                        <Grid Height="99.246" Width="121.38">
                            <CheckBox Name="cbSoundAlerts"  IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=SoundAlert}"   Margin="5,4.998,10,0"    Foreground="Brown" Height="18" VerticalAlignment="Top">_Alerts</CheckBox>
                            <CheckBox Name="cbSoundDocking" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=SoundDocking}" Margin="5,25.704,44,0" Foreground="Brown" Height="20" VerticalAlignment="Top">Dockin_g</CheckBox>
                            <CheckBox Name="cbScanComplete" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=SoundScanComplete}" Margin="5,45.696,12,0"    Foreground="Brown" Height="18" VerticalAlignment="Top">Scan co_mplete</CheckBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Start" Margin="2,12,0,59" Name="GroupBox3" Background="Transparent" Foreground="Brown" BorderBrush="Brown" HorizontalAlignment="Left" Width="140"></GroupBox>
                    <GroupBox Header="Main Window" Margin="294,12,302,59" Name="GroupBox5">
                        <Grid Height="196" Width="141">
                            <GroupBox Header="Dates and times" Margin="5,6.426,16,0" Name="GroupBox4" Height="82.608" VerticalAlignment="Top">
                                <Grid Height="50.754">
                                    <RadioButton Name="rbWhenSent" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=WhenSent}" Foreground="Brown" Margin="7.69,6.152,11.535,0" Height="16" VerticalAlignment="Top">When sen_t</RadioButton>
                                    <RadioButton Name="rbWhenReceived" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=WhenReceived}" Margin="7.69,26.146,-3.076,0" Foreground="Brown" Height="19.994" VerticalAlignment="Top">When rece_ived</RadioButton>
                                </Grid>
                            </GroupBox>
                            <CheckBox Name="CheckBox1" Margin="15.38,100,9.997,0" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=AutoChainSelect}" Padding="4,0,0,0" Height="38" VerticalAlignment="Top">
                                <AccessText TextWrapping="Wrap" Text="Select chains automaticall_y" Foreground="Brown" />
                               <!--<Foreground="Brown" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=AutoChainSelect}" Margin="9.997,112.274,30.074,0" Name="CheckBox1" Height="17.824" VerticalAlignment="Top" HorizontalContentAlignment="Left">Select chains a_utomatically>-->
                                
                                </CheckBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Confirm" Margin="0,12,154,59" Name="GroupBox1" Foreground="Brown" BorderBrush="Brown" HorizontalAlignment="Right" Width="140">
                        <Grid Height="191" Width="124">
                            <CheckBox Name="cbConfirmFile" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmFile}" Margin="2.001,47.838,26.013,0" Height="18" Foreground="Brown" VerticalAlignment="Top">_File</CheckBox>
                            <CheckBox Name="cbConfirmDelete" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmDelete}" Margin="2.001,3.57,42.688,0" Height="18" Foreground="Brown" VerticalAlignment="Top">_Delete</CheckBox>
                            <CheckBox Name="cbConfirmExit" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmExit}" Margin="2.001,25.704,24.012,0" Height="18" Foreground="Brown" VerticalAlignment="Top">_Exit</CheckBox>
                            <CheckBox Name="cbConfirmOpen" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmOpen}" Margin="2.001,89.964,40.02,0" Height="18" Foreground="Brown" VerticalAlignment="Top">_Open</CheckBox>
                            <CheckBox Name="cbConfirmUndo" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmUndo}" Margin="2.001,112.098,42.688,0" Height="18" Foreground="Brown" VerticalAlignment="Top">_Undo</CheckBox>
                            <CheckBox Name="cbConfirmHide" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ConfirmHide}" Margin="2.001,68.544,42.688,0" Foreground="Brown" Height="23.52" VerticalAlignment="Top">_Hide</CheckBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox BorderBrush="Brown" Foreground="Brown" Header="Upgrade Available" Margin="0,125,6,59" Name="GroupBox7" HorizontalAlignment="Right" Width="140">
                        <Grid Height="79" Width="109">
                            <CheckBox Name="cbUpgradeNofity" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=UpgradeNotify}"  Margin="-1,7,3,0"  Foreground="Brown" Height="18" VerticalAlignment="Top">Let me know_!</CheckBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox BorderBrush="Brown" Foreground="Brown" Header="Folder Window" Margin="148,12,0,59" Name="GroupBox6" HorizontalAlignment="Left" Width="140">
                        <Grid Height="194" Width="141">
                            <CheckBox Name="cbStartDocked" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=StartDocked}" Margin="7,4.998,29,0" Foreground="Brown" Height="21" VerticalAlignment="Top">Start doc_ked</CheckBox>
                            <RadioButton Name="rbDockLeft" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=DockLeft}" Margin="23,25,19,0" Foreground="Brown" Height="16" VerticalAlignment="Top">Dock _left</RadioButton>
                            <RadioButton Name="rbDockRight" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=DockRight}" Margin="23,43,9,0" Foreground="Brown" Height="19" VerticalAlignment="Top">Dock _right</RadioButton>
                            <Button Height="21" Margin="12.5,68.034,28.5,0" Name="btnFoldersToViewInFolderWindow" Width="100" VerticalAlignment="Top">Folders to sho_w</Button>
                            <!--<Separator Background="Brown" Margin="4,74,22,0" Name="Separator1" Height="1" VerticalAlignment="Top" />-->
                        </Grid>
                    </GroupBox>
                    <Grid Width="142" HorizontalAlignment="Left" Margin="5,39.96,0,59">
                        <CheckBox Name="cbScanInbox" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ScanInbox}" Height="21" Margin="7.854,7.14,15.708,0" VerticalAlignment="Top" Foreground="Brown">Scan inbo_x</CheckBox>
                        <CheckBox Name="cbScanSent" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ScanSent}" Margin="7,28,17,0" Height="22" VerticalAlignment="Top" Foreground="Brown">Scan _sent items</CheckBox>
                        <CheckBox Name="cbScanAllFolders" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ScanAll}" Margin="7,48,17,0" Foreground="Brown" Height="16" VerticalAlignment="Top">S_can filed e-mails</CheckBox>
                        <!--<CheckBox Name="cbVeiwRead" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ViewRead}" Margin="7,158,17,26" Foreground="Brown">_View read</CheckBox>
                        <CheckBox Name="cbViewUnread" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ViewUnRead}" Margin="7,0,16,6" Foreground="Brown" Height="18" VerticalAlignment="Bottom">Vie_w unread</CheckBox>-->
                        <Button Height="21" Margin="23,70.035,19,0" Name="btnFoldersToScan" Width="100" VerticalAlignment="Top">Folders to sca_n</Button>
                        <!--<CheckBox Foreground="Brown" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ViewInbox}" Margin="7,98,17,86" Name="cbViewInbox">View _inbox</CheckBox>
                        <CheckBox Foreground="Brown" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ViewSent}" Margin="7,0,17,66" Name="cbViewSent" Height="18" VerticalAlignment="Bottom">View sen_t items</CheckBox>
                        <CheckBox Foreground="Brown" IsChecked="{Binding Source={x:Static self:MySettings.Default}, Path=ViewAll}" Margin="7,0,17,46" Name="cbViewFolders" Height="18" VerticalAlignment="Bottom">_View folders</CheckBox>-->
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        <Rectangle Margin="75,22,12,0" Name="Rectangle2" Stroke="{StaticResource DefaultSystemBrush}" Fill="{StaticResource DefaultSystemBrush}" Height="1" VerticalAlignment="Top" />
        <Button Height="25" Margin="0,0,26,52.292" Name="btnOK" Width="141.496" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsDefault="True">OK</Button>
        <Button Height="25" HorizontalAlignment="Left" Margin="19.994,0,0,52.292" Name="btnCancel" Width="138.42" VerticalAlignment="Bottom" IsCancel="True">Cancel</Button>
        <Image Cursor="Arrow" Height="14" Margin="0,3,15,0" Name="imgClose" Source="/filefriendly;component/Resources/close.gif" Stretch="Fill" ToolTip="Close" VerticalAlignment="Top" HorizontalAlignment="Right" Width="14" />
        <!--<Button Height="25" IsDefault="False" Margin="347,0,358,50.754" Name="btnBuyNow" Width="68" VerticalAlignment="Bottom">Buy me a coffee</Button> -->
    </Grid>
</Window>
