<Window x:Class="PickAFolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FileFriendly - Folders" Height="600" Width="550" MinHeight="550" MinWidth="385" WindowStyle="None" Name="FolderWindow" ShowInTaskbar="False" ResizeMode="CanResizeWithGrip" Margin="0" Visibility="Visible" Tag=" " Icon="/filefriendly;component/Resources/fflogogif.gif">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/BrushResources.xaml" />
                <ResourceDictionary Source="Resources/ControlResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="WindowsBackgroundBrush" />
    </Window.Background>
        
    <Grid Width="Auto" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15.453" />
            <ColumnDefinition Width="55.249" />
            <ColumnDefinition Width="329.058*" />
            <ColumnDefinition Width="115" />
            <ColumnDefinition Width="13" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24.679" />
            <RowDefinition Height="416.321*" />
            <RowDefinition Height="110.898" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <TabControl Name="TabControl2" Margin="7,5,12,5" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.RowSpan="4" Grid.ColumnSpan="5">
            <TabItem Header="Folders" Name="TabItem2" Foreground="{StaticResource DefaultSystemBrush}" Background="Transparent" OverridesDefaultStyle="false" Height="Auto" Margin="0">
            </TabItem>
        </TabControl>
        
        <StackPanel Name="Grid2" Width="48.297" Grid.Column="3" HorizontalAlignment="Right" Margin="0,2.4,0.703,4.298" Grid.RowSpan="2" Grid.Row="1" Background="Transparent">
            <Label Content="Quick Filter" VerticalAlignment="Top" FontSize="9" HorizontalContentAlignment="Center" Foreground="{StaticResource DefaultSystemBrush}" Padding="2" Margin="-1,0" IsHitTestVisible="False" />
            <Button Name="Button00" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" HorizontalContentAlignment="Center" Cursor="Arrow" Tag="*None*" 
                    ToolTip="Click the 'None' button or press the ESC key to clear the Quick Filter">None</Button>
            <Button Name="Button01" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="A">A</Button>
            <Button Name="Button02" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="B">B</Button>
            <Button Name="Button03" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="C">C</Button>
            <Button Name="Button04" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="D">D</Button>
            <Button Name="Button05" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="E">E</Button>
            <Button Name="Button06" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="F">F</Button>
            <Button Name="Button07" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="G">G</Button>
            <Button Name="Button08" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="H">H</Button>
            <Button Name="Button09" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="I">I</Button>
            <Button Name="Button10" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="J">J</Button>
            <Button Name="Button11" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="K">K</Button>
            <Button Name="Button12" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="L">L</Button>
            <Button Name="Button13" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="M">M</Button>
            <Button Name="Button14" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="N">N</Button>
            <Button Name="Button15" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="O">O</Button>
            <Button Name="Button16" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="P">P</Button>
            <Button Name="Button17" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="Q">Q</Button>
            <Button Name="Button18" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="R">R</Button>
            <Button Name="Button19" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="S">S</Button>
            <Button Name="Button20" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="T">T</Button>
            <Button Name="Button21" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="U">U</Button>
            <Button Name="Button22" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="V">V</Button>
            <Button Name="Button23" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="W">W</Button>
            <Button Name="Button24" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="X">X</Button>
            <Button Name="Button25" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="Y">Y</Button>
            <Button Name="Button26" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="Z">Z</Button>
            <Button Name="Button27" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="9">9</Button>
            <Button Name="Button28" Height="17" Width="45" VerticalAlignment="Top" FontSize="9" Cursor="Arrow" Tag="!">!</Button>
        </StackPanel>
        
        <!-- Recommendations -->
        <Rectangle  Height="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="55,0,0,0" Grid.Column="1" Name="Rectangle1" Stroke="{StaticResource DefaultSystemBrush}" VerticalAlignment="Top" Fill="{StaticResource DefaultSystemBrush}" />
        <Grid Name="Grid1" Margin="15,9.281,56.703,1" Grid.ColumnSpan="4" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="400*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="385*" />
                <ColumnDefinition Width="59*" />
            </Grid.ColumnDefinitions>
            <TreeView Name="TreeView1" Margin="6,1,0,0" Background="Transparent" BorderThickness="0" Grid.ColumnSpan="2" AllowDrop="False" Cursor="Arrow"></TreeView>
        </Grid>
        
        <Rectangle Margin="20,0,-50,4" Grid.RowSpan="1" Grid.ColumnSpan="3" Height="1"  Name="SeperatorLine" VerticalAlignment="Bottom" Stroke="{StaticResource DefaultSystemBrush}" Fill="{StaticResource DefaultSystemBrush}" Grid.Row="1" />
       
        <Button Margin="4.576,2,65,0"       Name="btnPick1"     Height="26" Width="429.971" Background="Transparent" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"  AllowDrop="False" VerticalAlignment="Top" Cursor="Arrow">Pick 1</Button>
        <Button Margin="4.573,30,65,54.898" Name="btnPick2"     Height="26" Width="429.974" Background="Transparent" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"  AllowDrop="False" Cursor="Arrow">Pick 2</Button>
        <Button Margin="4.581,0,65,27.898"           Name="btnPick3"     Height="26" Width="429.966" Background="Transparent" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" AllowDrop="False" Cursor="Arrow">Pick 3</Button>
        <Button Margin="4.576,0,65,0"       Name="btnPick4"     Height="26" Width="429.971" Background="Transparent" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" AllowDrop="False" Grid.ColumnSpan="3" Cursor="Arrow">Pick 4</Button>
        
        <Image Name="PushPin" Margin="0,-2,1,0" Width="30" Height="30" Grid.Column="3" Stretch="Fill"  Cursor="Arrow" HorizontalAlignment="Right" Source="/filefriendly;component/Resources/pushpindown.gif" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Top" />

        <Rectangle Name="Guideline" Margin="0,4,0,4.298" Stroke="Black" Fill="Red" Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" Visibility="Hidden" />
    </Grid>
            
</Window>
